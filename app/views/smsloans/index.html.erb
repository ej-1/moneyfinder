<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<p class="navbar-text pull-right">
<% if admin_signed_in? %>
  Logged in as <strong><%= current_admin.email %></strong>.
  <%= link_to "Logout", destroy_admin_session_path, method: :delete, :class => 'navbar-link'  %>
<% else %>
  <%= link_to "Login", new_admin_session_path, :class => 'navbar-link'  %>
<% end %>

<h1>Listing smsloans</h1>

<table>
  <thead>
    <tr>
      <th>Bank</th>
      <th>Min loanamoun</th>
      <th>Max loanamoun</th>
      <th>Mobile friendly site</th>
      <th>Smsloan payment note</th>
      <th>Smsloan min age</th>
      <th>Cost free loan</th>
      <th>New borrower 5k</th>
      <th>New borrower 10k</th>
      <th>No uc</th>
      <th>Skef member</th>
      <th>Bankid</th>
      <th>Open on saturdays</th>
      <th>Weblink</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @smsloans.each do |smsloan| %>
      <tr>
        <td><%= smsloan.bank %></td>
        <td><%= smsloan.min_loanamoun %></td>
        <td><%= smsloan.max_loanamoun %></td>
        <td><%= smsloan.mobile_friendly_site %></td>
        <td><%= smsloan.smsloan_payment_note %></td>
        <td><%= smsloan.smsloan_min_age %></td>
        <td><%= smsloan.cost_free_loan %></td>
        <td><%= smsloan.new_borrower_5K %></td>
        <td><%= smsloan.new_borrower_10K %></td>
        <td><%= smsloan.no_uc %></td>
        <td><%= smsloan.skef_member %></td>
        <td><%= smsloan.bankid %></td>
        <td><%= smsloan.open_on_saturdays %></td>
        <td><%= smsloan.weblink %></td>
        <td><%= link_to 'Show', smsloan %></td>
        <td><%= link_to 'Edit', edit_smsloan_path(smsloan) %></td>
        <td><%= link_to 'Destroy', smsloan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

